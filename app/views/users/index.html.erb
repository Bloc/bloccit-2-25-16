<h1>Users</h1>

<div class="row">
  <div class="col-md-8">
    <% @users.each do |user| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to user.email, user %>
          </h4>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-md-4">
    <%= link_to "New User", new_user_path, class: 'btn btn-success' %>
  </div>
</div>
